@model IEnumerable<ShapesClassLibrary.Shapes.Shape>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShortInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.Raw(item.ShortInfo)</td>
                <td>@Html.Raw(item.FullInfo)</td>
            </tr>
        }
    </tbody>
</table>

